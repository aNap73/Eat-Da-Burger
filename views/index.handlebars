<div class="burger">
  <nav class="navbar bg-dark">
    <a class="navbar-brand" href="#">
      <H1>Burger Tracking!</H1>
    </a>
  </nav>
  <div class="row">
    <div class="col-md-6">
      <div class="jumbotron bg-dark text-primary">
        <h2 class="border-bottom">Burgers I want to eat!</h2>
        
        {{#each burgers}} {{#unless DEVOURED}} {{> burgers/burger-block eaten=1}} {{/unless}} {{/each}}
      </div>
    </div>
    <div class="col-md-6">
      <div class="jumbotron bg-dark text-primary">
        <div class="row">
          <div class="col-6">
            <h2 class="border-bottom">Burgers I have eaten!</h2>
            
          </div>
          <div class="col-6">
            <button class="btn btn-primary remove-log">CLEAR BURGER LOG</button>
          </div>
        </div>
        {{#each burgers}} {{#if DEVOURED}} {{> burgers/burger-block eaten=0}} {{/if}} {{/each}}
      </div>
    </div>
  </div>
  <div>
    <div class="jumbotron bg-dark text-primary">


      <h2 class="border-bottom">Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burg">Burger Name:</label>
          <input type="text" id="burg" name="BURGER_NAME">
        </div>

        <div class="form-group">
          <label for="devo">Devoured?</label>
          <br>
          <input type="radio" name="DEVOURED" value="0" checked> READY TO EAT!
          <br>
          <input type="radio" name="DEVOURED" value="1"> DEVOURED!

        </div>

        <button class="btn btn-primary" type="submit">Add Burger</button>
      </form>

    </div>
  </div>
</div>